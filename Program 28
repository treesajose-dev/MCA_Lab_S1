/* Question 2 - Polynomial Multiplication@TreesaJose
Completed On: 13-08-2025 */

#include <stdio.h>
#define size 5

int main(){
	int A[size],B[size];
	int C[size+size]={0};
	int i,j,deg1,deg2,degMul;
	
	printf("Program to perform Polynomial Multiplication\n\n");
	printf("Enter degree of polynomial 1: ");
	scanf("%d",&deg1);
	for(i=0;i<=deg1;i++){
		printf("Enter coeffient of x^%d: ",i);
		scanf("%d",&A[i]);	
	}

	printf("\nEnter degree of polynomial 2: ");
	scanf("%d",&deg2);
	for(i=0;i<=deg2;i++){
		printf("Enter coeffient of x^%d: ",i);
		scanf("%d",&B[i]);	
	}	
	
	printf("\nPolynomial 1\n");
	for(i=deg1;i>=0;i--){
		if(i==0)
			printf("%d",A[i]);
		else if(i==1)
			printf("%dx + ",A[i]);
		else
			printf("%dx^%d + ",A[i],i);
	}
	
	printf("\n\nPolynomial 2\n");
	for(i=deg2;i>=0;i--){
		if(i==0)
			printf("%d",B[i]);
		else if(i==1)
			printf("%dx + ",B[i]);
		else
			printf("%dx^%d + ",B[i],i);
	}
	
	degMul=deg1+deg2;
	for(i=0;i<=deg1;i++){
		for(j=0;j<=deg2;j++){
			C[i+j]+=A[i]*B[j];
		}
	}
	
	printf("\n\nPolynomial Multiplication Performed");
	printf("\n\nResultant Polynomial 2\n");
	for(i=degMul;i>=0;i--){
		if(i==0)
			printf("%d",C[i]);
		else if(i==1)
			printf("%dx + ",C[i]);
		else
			printf("%dx^%d + ",C[i],i);
	}
	return 0;
}
