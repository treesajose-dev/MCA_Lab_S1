/*Program - Sort array elements in ascending order@Treesa Jose   
 completed on: 23-07-2025*/

#include <stdio.h>

int read_arr(int arr[],int n){
	int i;
  	printf("\nEnter %d values: ",n);
  	for(i=0;i<n;i++){
  		scanf("%d",&arr[i]);
  	}		
}

int disp_arr(int arr[],int n){
	int i;
  	printf("\nArray elemets are:\n");
  	for(i=0;i<n;i++){
  		printf("%d\t",arr[i]);
  	}
	  printf("\n");	
}

void sort(int arr[],int n){
	int i,j,temp;
  
  	for(i=0;i<n-1;i++){
  		for(j=0;j<n-i-1;j++){
  			if(arr[j]>arr[j+1]){
  				temp=arr[j];
  				arr[j]=arr[j+1];
  				arr[j+1]=temp;
			  }
		  }
	  }
}

void menu(){
	int ch;
	int arr[5],n;
	
	while(ch!=4){
		printf("\nMENU\n1.Read array elements\n2.Display array elements\n3.Sort array\n4.Exit");
		printf("\nEnter your choice: ");
		scanf("%d",&ch);
		switch(ch){
		case 1:
			printf("Enter no. of elements in array: ");
  			scanf("%d",&n);
			read_arr(arr,n);
			break;
		case 2:
			disp_arr(arr,n);
			break;
		case 3:
			sort(arr,n);
			break;
		case 4:
			break;
	    default:
	    	printf("Invalid choice!\n");
	   }
	}
}

int main(){	
  
  menu();	
  return 0;
}
